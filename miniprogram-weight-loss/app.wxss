/* app.wxss */
page {
  background-color: #f0f7e8;
  font-family: -apple-system-font, "Helvetica Neue", sans-serif;
}

/* 通用样式 */
.container {
  padding: 30rpx;
  padding-bottom: 100rpx;
}

.card {
  background: #ffffff;
  border-radius: 40rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.arrow {
  color: #999;
  font-size: 40rpx;
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  color: #ffffff;
  border-radius: 30rpx;
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.btn-secondary {
  background: #f8f9fa;
  color: #333;
  border-radius: 30rpx;
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

/* 统计卡片 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
}

.stat-box {
  text-align: center;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 30rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin: 10rpx 0;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 列表项 */
.list-item {
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.list-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #a8d08d, #8bc34a);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 24rpx;
}

.list-content {
  flex: 1;
}

.list-title {
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
  font-size: 28rpx;
}

.list-desc {
  font-size: 24rpx;
  color: #999;
}

.list-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #a8d08d;
}

/* 表单样式 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  padding: 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 30rpx;
  font-size: 28rpx;
  background: #ffffff;
}

.form-textarea {
  width: 100%;
  padding: 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 30rpx;
  font-size: 28rpx;
  min-height: 200rpx;
  background: #ffffff;
}

/* 情绪网格 */
.emotion-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
  margin: 40rpx 0;
}

.emotion-item {
  text-align: center;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 30rpx;
}

.emotion-item.selected {
  background: #a8d08d;
  color: #ffffff;
}

.emotion-icon {
  font-size: 64rpx;
  margin-bottom: 10rpx;
}

.emotion-label {
  font-size: 24rpx;
}

/* 加载动画 */
.loading {
  text-align: center;
  padding: 80rpx;
}

.spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #f0f0f0;
  border-top: 8rpx solid #a8d08d;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 结果卡片 */
.result-card {
  background: linear-gradient(135deg, #e8f5e9, #f1f8e9);
  padding: 40rpx;
  border-radius: 30rpx;
  margin: 30rpx 0;
  border-left: 8rpx solid #a8d08d;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-content {
  line-height: 1.6;
  color: #555;
  font-size: 28rpx;
}

/* 徽章 */
.badge {
  display: inline-block;
  padding: 8rpx 24rpx;
  background: #a8d08d;
  color: white;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx;
  color: #999;
  font-size: 28rpx;
}
