/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #e8f5e9 0%, #f1f8e9 100%);
  padding: 40rpx 30rpx;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 60rpx;
  padding-top: 40rpx;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: #999;
}

/* Tab切换 */
.tab-bar {
  display: flex;
  background: white;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(168, 208, 141, 0.1);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #a8d08d 0%, #b8e0a0 100%);
}

.tab-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
}

.tab-item.active .tab-text {
  color: white;
  font-weight: 600;
}

/* 表单容器 */
.form-container {
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.form-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(168, 208, 141, 0.15);
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.label-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.required {
  color: #ff4444;
  margin-left: 4rpx;
}

.optional {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
  font-weight: normal;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-input:focus {
  background: #fff;
  border: 2rpx solid #a8d08d;
}

/* 表单选项 */
.form-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.remember-me {
  display: flex;
  align-items: center;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  transition: all 0.3s;
}

.checkbox.checked {
  background: #a8d08d;
  border-color: #a8d08d;
  color: white;
}

.option-text {
  font-size: 26rpx;
  color: #666;
}

.forgot-password {
  font-size: 26rpx;
}

.link-text {
  color: #a8d08d;
  font-weight: 500;
}

/* 提交按钮 */
.submit-button {
  width: 100%;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  border: none;
  margin-bottom: 20rpx;
}

.login-button {
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
}

.register-button {
  background: linear-gradient(135deg, #81c784 0%, #66bb6a 100%);
}

.submit-button[disabled] {
  opacity: 0.6;
}

/* 表单底部 */
.form-footer {
  text-align: center;
  font-size: 26rpx;
}

.footer-text {
  color: #999;
  margin-right: 8rpx;
}

/* 跳过登录 */
.skip-section {
  margin-top: 40rpx;
  text-align: center;
}

.skip-button {
  display: inline-flex;
  align-items: center;
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50rpx;
  margin-bottom: 16rpx;
}

.skip-text {
  font-size: 26rpx;
  color: #666;
  margin-right: 8rpx;
}

.skip-arrow {
  font-size: 28rpx;
  color: #a8d08d;
}

.skip-tip {
  font-size: 24rpx;
  color: #999;
}

/* 服务条款 */
.terms-section {
  margin-top: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

.terms-link {
  color: #a8d08d;
  text-decoration: underline;
}
