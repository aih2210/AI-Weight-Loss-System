/* pages/coin-history/coin-history.wxss */
.container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  background: white;
  padding: 20rpx;
  gap: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.filter-item.active {
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  color: white;
  font-weight: 600;
}

/* 历史记录列表 */
.history-list {
  padding: 0 20rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.history-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.history-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.history-icon.earn {
  background: #e8f5e9;
}

.history-icon.spend {
  background: #ffebee;
}

.history-info {
  flex: 1;
}

.history-reason {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.history-time {
  font-size: 22rpx;
  color: #999;
}

.history-right {
  text-align: right;
}

.history-amount {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.history-amount.earn {
  color: #4caf50;
}

.history-amount.spend {
  color: #f44336;
}

.history-balance {
  font-size: 22rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
