/* pages/profile/profile.wxss */
.container {
  padding: 20rpx;
  background-color: #f0f7e8;
  min-height: 100vh;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(168, 208, 141, 0.1);
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

/* 头像容器 */
.avatar-container {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  cursor: pointer;
}

.avatar-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #a8d08d, #8bc34a);
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(168, 208, 141, 0.3);
}

.avatar-emoji {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #a8d08d, #8bc34a);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  box-shadow: 0 4rpx 12rpx rgba(168, 208, 141, 0.3);
}

.avatar-edit-badge {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 36rpx;
  height: 36rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #a8d08d, #8bc34a);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  margin-right: 30rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.user-desc {
  font-size: 28rpx;
  color: #999;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-box {
  text-align: center;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

.list-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.list-content {
  flex: 1;
}

.list-title {
  font-size: 28rpx;
  color: #333;
}

.list-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.section-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.arrow {
  font-size: 40rpx;
  color: #ccc;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
  text-align: center;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.picker-display {
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.hint-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  line-height: 1.6;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.cancel-button {
  flex: 1;
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.submit-button {
  flex: 1;
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 头像选择弹窗 */
.avatar-modal {
  width: 650rpx;
  max-height: 85vh;
}

.avatar-section {
  margin-bottom: 30rpx;
}

.section-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.emoji-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 15rpx;
}

.emoji-item {
  width: 100%;
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.emoji-item:active {
  background: #a8d08d;
  transform: scale(0.95);
}

.image-picker-btn {
  width: 100%;
  background: linear-gradient(135deg, #64b5f6 0%, #42a5f5 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.full-width {
  width: 100%;
  margin-top: 20rpx;
}
