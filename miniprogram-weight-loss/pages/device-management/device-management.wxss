/* pages/device-management/device-management.wxss */
.container {
  padding: 20rpx;
  background-color: #f0f7e8;
  min-height: 100vh;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(168, 208, 141, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.device-item {
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
}

.device-info {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.device-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #a8d08d, #8bc34a);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
}

.device-details {
  flex: 1;
}

.device-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.device-status {
  font-size: 24rpx;
  color: #4caf50;
  margin-bottom: 6rpx;
  display: flex;
  align-items: center;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background: #4caf50;
  border-radius: 50%;
  margin-right: 8rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.device-sync {
  font-size: 22rpx;
  color: #999;
}

.device-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  flex: 1;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  border: none;
}

.action-btn.sync {
  background: linear-gradient(135deg, #a8d08d, #8bc34a);
  color: white;
}

.action-btn.disconnect {
  background: #f5f5f5;
  color: #666;
}

.empty-text {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}

.add-button {
  width: 100%;
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 28rpx;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.device-types {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.type-item {
  text-align: center;
  padding: 30rpx 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.type-item.disabled {
  opacity: 0.5;
}

.type-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.type-name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.type-status {
  font-size: 22rpx;
  color: #a8d08d;
}

.tips-card {
  background: linear-gradient(135deg, #e8f5e9, #f1f8e9);
  border-left: 4rpx solid #a8d08d;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.tips-text {
  font-size: 26rpx;
  color: #666;
  line-height: 2;
  white-space: pre-line;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
  text-align: center;
}

.scan-button {
  width: 100%;
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 28rpx;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.scan-hint {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 40rpx 0;
}

.available-list {
  margin: 20rpx 0;
}

.available-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
}

.available-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #a8d08d, #8bc34a);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 15rpx;
}

.available-info {
  flex: 1;
}

.available-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.available-signal {
  font-size: 22rpx;
  color: #999;
}

.connect-arrow {
  font-size: 40rpx;
  color: #ccc;
}

.cancel-button {
  width: 100%;
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}
