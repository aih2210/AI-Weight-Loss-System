/* pages/order-list/order-list.wxss */
.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.order-id {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
  font-weight: 600;
}

.order-product {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.product-img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.product-icon {
  font-size: 60rpx;
  position: relative;
  z-index: 1;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.product-brand {
  font-size: 22rpx;
  color: #999;
}

.product-payment {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.cash {
  font-size: 32rpx;
  font-weight: bold;
  color: #f44336;
}

.coin {
  font-size: 24rpx;
  color: #ff9800;
  font-weight: 600;
}

.order-time {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.order-actions {
  display: flex;
  gap: 15rpx;
  justify-content: flex-end;
}

.btn-cancel {
  padding: 16rpx 32rpx;
  background: white;
  color: #f44336;
  border: 1rpx solid #f44336;
  border-radius: 40rpx;
  font-size: 24rpx;
}

.btn-detail {
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shopping {
  display: inline-block;
  padding: 20rpx 60rpx;
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
}
