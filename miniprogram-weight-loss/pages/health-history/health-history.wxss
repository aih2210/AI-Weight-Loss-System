/* pages/health-history/health-history.wxss */
.container {
  min-height: 100vh;
  background-color: #f0f7e8;
  padding-bottom: 120rpx;
}

.tabs {
  display: flex;
  background: white;
  padding: 0 20rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #a8d08d;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #a8d08d;
  border-radius: 2rpx;
}

.date-range {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  padding: 20rpx;
  background: white;
  margin-bottom: 20rpx;
}

.range-item {
  padding: 12rpx 32rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.range-item.active {
  background: linear-gradient(135deg, #a8d08d, #8bc34a);
  color: white;
}

.history-content {
  padding: 0 20rpx;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(168, 208, 141, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.history-list {
  margin-top: 20rpx;
}

.history-item {
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-left: 4rpx solid #e0e0e0;
}

.history-item.success {
  border-left-color: #4caf50;
  background: #e8f5e0;
}

.history-item.warning {
  border-left-color: #ff9800;
  background: #fff3e0;
}

.history-item.danger {
  border-left-color: #f44336;
  background: #ffebee;
}

.item-date {
  font-size: 24rpx;
  color: #999;
  min-width: 120rpx;
}

.item-bar-container {
  flex: 1;
  height: 12rpx;
  background: #e0e0e0;
  border-radius: 6rpx;
  overflow: hidden;
  margin: 0 20rpx;
}

.item-bar {
  height: 100%;
  background: linear-gradient(90deg, #a8d08d, #8bc34a);
  transition: width 0.3s;
}

.item-value {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  min-width: 120rpx;
  text-align: right;
}

.item-value-large {
  font-size: 32rpx;
  font-weight: bold;
  color: #a8d08d;
}

.item-status,
.item-quality {
  font-size: 24rpx;
  color: #666;
}

.stats-card {
  background: linear-gradient(135deg, #e8f5e9, #f1f8e9);
}

.stat-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid rgba(168, 208, 141, 0.2);
}

.stat-row:last-child {
  border-bottom: none;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #a8d08d;
}

.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background: white;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  flex: 1;
  padding: 28rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  color: white;
}

.action-btn.secondary {
  background: #f5f5f5;
  color: #666;
}
