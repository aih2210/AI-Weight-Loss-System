/* pages/workout-video/workout-video.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f7e8 0%, #ffffff 100%);
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 头部卡片 */
.header-card {
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  padding: 30rpx;
  border-radius: 16rpx;
  color: white;
  margin-bottom: 20rpx;
}

.workout-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  text-align: center;
}

.workout-meta {
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 28rpx;
}

.meta-text {
  font-size: 26rpx;
}

/* 进度条 */
.progress-section {
  background: white;
  padding: 25rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(168, 208, 141, 0.15);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.progress-text {
  font-size: 26rpx;
  color: #666;
}

.progress-percent {
  font-size: 26rpx;
  font-weight: bold;
  color: #a8d08d;
}

.progress-bar {
  height: 16rpx;
  background: #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #a8d08d 0%, #8bc34a 100%);
  transition: width 0.3s;
}

/* 当前动作卡片 */
.current-activity-card {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(168, 208, 141, 0.15);
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.activity-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.activity-type {
  padding: 8rpx 20rpx;
  background: #a8d08d;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 视频区域 */
.video-section {
  margin-bottom: 30rpx;
}

.video-placeholder {
  width: 100%;
  height: 400rpx;
  background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 100%);
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.play-icon {
  width: 100rpx;
  height: 100rpx;
  background: rgba(168, 208, 141, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  color: white;
}

.play-text {
  font-size: 28rpx;
  color: #666;
}

/* 倒计时 */
.timer-section {
  text-align: center;
  padding: 30rpx;
  background: #f0f7e8;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.timer-display {
  font-size: 80rpx;
  font-weight: bold;
  color: #a8d08d;
  font-family: 'Courier New', monospace;
  margin-bottom: 10rpx;
}

.timer-label {
  font-size: 24rpx;
  color: #666;
}

/* 动作描述 */
.activity-description {
  padding: 25rpx;
  background: #fff3e0;
  border-radius: 12rpx;
  border-left: 4rpx solid #ff9800;
}

.desc-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #e65100;
  margin-bottom: 15rpx;
}

.desc-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 20rpx;
}

.btn-detail {
  width: 100%;
  padding: 20rpx;
  background: white;
  color: #ff9800;
  border: 2rpx solid #ff9800;
  border-radius: 12rpx;
  font-size: 26rpx;
}

/* 控制按钮 */
.control-buttons {
  margin-bottom: 20rpx;
}

.btn-row {
  display: flex;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.btn-row-secondary {
  margin-bottom: 0;
}

.btn-primary,
.btn-success,
.btn-warning,
.btn-secondary,
.btn-danger {
  flex: 1;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
}

.btn-large {
  font-size: 36rpx;
  padding: 35rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(168, 208, 141, 0.3);
}

.btn-success {
  background: linear-gradient(135deg, #4caf50 0%, #66bb6a 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.btn-warning {
  background: linear-gradient(135deg, #ff9800 0%, #ffa726 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.3);
}

.btn-secondary {
  background: white;
  color: #666;
  border: 2rpx solid #e0e0e0;
  font-size: 26rpx;
  padding: 24rpx;
}

.btn-danger {
  background: white;
  color: #f44336;
  border: 2rpx solid #f44336;
  font-size: 26rpx;
  padding: 24rpx;
}

/* 训练列表 */
.activities-list-card {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(168, 208, 141, 0.15);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

.activities-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.activity-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.activity-item.current {
  background: #e8f5e9;
  border: 2rpx solid #4caf50;
}

.activity-item.completed {
  background: #f0f7e8;
  opacity: 0.7;
}

.activity-number {
  width: 50rpx;
  height: 50rpx;
  background: #a8d08d;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.activity-item.current .activity-number {
  background: #4caf50;
}

.activity-item.completed .activity-number {
  background: #9e9e9e;
}

.activity-info {
  flex: 1;
}

.activity-name-small {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 5rpx;
}

.activity-duration {
  font-size: 24rpx;
  color: #999;
}

.activity-status {
  font-size: 32rpx;
  color: #4caf50;
}

/* 提示卡片 */
.tips-card {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(168, 208, 141, 0.15);
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  padding-left: 10rpx;
}
