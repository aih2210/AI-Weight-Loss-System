/* pages/recipe-detail/recipe-detail.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f7e8 0%, #ffffff 100%);
  padding-bottom: 120rpx;
}

/* 头部卡片 */
.header-card {
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  padding: 40rpx 30rpx;
  color: white;
}

.recipe-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.recipe-meta {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin-bottom: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 28rpx;
}

.meta-text {
  font-size: 26rpx;
  opacity: 0.95;
}

.recipe-tags {
  display: flex;
  justify-content: center;
  gap: 15rpx;
  flex-wrap: wrap;
}

.recipe-tags .tag {
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 营养概览 */
.nutrition-overview {
  display: flex;
  background: white;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(168, 208, 141, 0.15);
}

.nutrition-item {
  flex: 1;
  text-align: center;
}

.nutrition-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #a8d08d;
  margin-bottom: 8rpx;
}

.nutrition-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.nutrition-unit {
  font-size: 20rpx;
  color: #999;
}

/* 标签页 */
.tabs {
  display: flex;
  background: white;
  margin: 0 20rpx;
  border-radius: 16rpx;
  padding: 10rpx;
  box-shadow: 0 2rpx 12rpx rgba(168, 208, 141, 0.15);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  color: white;
  font-weight: bold;
}

/* 标签页内容 */
.tab-content {
  padding: 20rpx;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(168, 208, 141, 0.15);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

/* 食材清单 */
.ingredients-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ingredient-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  gap: 15rpx;
}

.ingredient-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #a8d08d;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #a8d08d;
  font-size: 24rpx;
  font-weight: bold;
}

.ingredient-info {
  flex: 1;
}

.ingredient-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 5rpx;
}

.ingredient-note {
  font-size: 24rpx;
  color: #999;
}

.ingredient-amount {
  font-size: 26rpx;
  color: #a8d08d;
  font-weight: bold;
}

/* 进度条 */
.progress-bar {
  background: white;
  padding: 25rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(168, 208, 141, 0.15);
}

.progress-text {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  text-align: center;
}

.progress-track {
  height: 16rpx;
  background: #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #a8d08d 0%, #8bc34a 100%);
  transition: width 0.3s;
}

/* 步骤列表 */
.steps-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.step-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(168, 208, 141, 0.15);
  transition: all 0.3s;
}

.step-item.completed {
  background: #f0f7e8;
  opacity: 0.7;
}

.step-header {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  position: relative;
}

.step-num-text {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

.step-checkmark {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  width: 30rpx;
  height: 30rpx;
  background: #4caf50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 20rpx;
}

.step-title-wrapper {
  flex: 1;
}

.step-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.step-time {
  font-size: 24rpx;
  color: #999;
}

.step-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 15rpx;
  padding-left: 80rpx;
}

.step-tips {
  display: flex;
  gap: 10rpx;
  padding: 15rpx 20rpx;
  background: #fff3e0;
  border-radius: 12rpx;
  margin-left: 80rpx;
  border-left: 4rpx solid #ff9800;
}

.tips-icon {
  font-size: 24rpx;
}

.tips-text {
  flex: 1;
  font-size: 24rpx;
  color: #e65100;
  line-height: 1.6;
}

/* 小贴士列表 */
.tips-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.tip-item {
  display: flex;
  gap: 15rpx;
  padding: 15rpx 0;
}

.tip-bullet {
  color: #a8d08d;
  font-size: 32rpx;
  font-weight: bold;
}

.tip-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 营养亮点 */
.highlights-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.highlight-item {
  display: flex;
  gap: 15rpx;
  padding: 20rpx;
  background: #e8f5e9;
  border-radius: 12rpx;
  border-left: 4rpx solid #4caf50;
}

.highlight-icon {
  width: 32rpx;
  height: 32rpx;
  background: #4caf50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 20rpx;
  flex-shrink: 0;
}

.highlight-text {
  flex: 1;
  font-size: 28rpx;
  color: #2e7d32;
  line-height: 1.6;
}

/* 按钮 */
.btn-primary {
  width: calc(100% - 40rpx);
  margin: 20rpx;
  padding: 28rpx;
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(168, 208, 141, 0.3);
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background: white;
  padding: 20rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
  gap: 15rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border: none;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #666;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 24rpx;
}
