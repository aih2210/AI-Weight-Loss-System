/* pages/health-mall/health-mall.wxss */
.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 余额栏 */
.balance-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #ffd54f 0%, #ffb300 100%);
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 179, 0, 0.2);
}

.balance-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.balance-label {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.6);
}

.balance-value {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.order-btn {
  padding: 16rpx 32rpx;
  background: white;
  color: #ffb300;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 500;
}

/* 分类标签 */
.category-tabs {
  background: white;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: inline-flex;
  padding: 0 20rpx;
  gap: 20rpx;
}

.category-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.category-item.active {
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  color: white;
  font-weight: 600;
}

/* 产品列表 */
.product-list {
  padding: 0 20rpx;
}

.product-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.product-card:active {
  transform: scale(0.98);
}

.product-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.product-img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.product-icon {
  font-size: 180rpx;
  filter: drop-shadow(0 8rpx 16rpx rgba(0, 0, 0, 0.2));
  position: relative;
  z-index: 1;
}

.product-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.product-brand {
  font-size: 22rpx;
  color: #999;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.product-features {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin: 10rpx 0;
}

.feature-tag {
  font-size: 22rpx;
  color: #8bc34a;
  background: #f0f7e8;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
}

.product-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 15rpx 0;
}

.price-row {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.cash-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #f44336;
}

.coin-price {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #fff8e1 0%, #ffecb3 100%);
  border-radius: 20rpx;
}

.coin-icon {
  font-size: 28rpx;
}

.coin-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff6f00;
}

.product-discount {
  font-size: 24rpx;
  color: #ff6f00;
  background: #fff3e0;
  padding: 10rpx 16rpx;
  border-radius: 8rpx;
  text-align: center;
  font-weight: 500;
}

.product-stock {
  font-size: 22rpx;
  color: #4caf50;
  text-align: right;
}

.low-stock {
  color: #ff9800;
}

.out-stock {
  color: #f44336;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 底部说明 */
.bottom-tips {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #666;
  line-height: 2;
  padding-left: 10rpx;
}
