/* pages/exercise/exercise.wxss */
.container {
  padding: 20rpx;
  background-color: #f0f7e8;
  min-height: 100vh;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(168, 208, 141, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-box {
  text-align: center;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin: 8rpx 0;
}

.add-button {
  width: 100%;
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.exercise-item {
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
  border-left: 4rpx solid #a8d08d;
}

.exercise-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.exercise-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.exercise-calories {
  font-size: 24rpx;
  color: #a8d08d;
  font-weight: bold;
}

.exercise-details {
  font-size: 24rpx;
  color: #999;
}

.exercise-notes {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  line-height: 1.6;
}

.empty-text {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
  text-align: center;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.picker-display {
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.input-field {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.textarea-field {
  width: 100%;
  min-height: 150rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.cancel-button {
  flex: 1;
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.submit-button {
  flex: 1;
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 智能运动计划卡片 */
.plan-card {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  border-left: 4rpx solid #66bb6a;
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.plan-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2e7d32;
}

.plan-arrow {
  font-size: 48rpx;
  color: #66bb6a;
  font-weight: 300;
}

.plan-preview {
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 12rpx;
}

.plan-info {
  display: flex;
  gap: 30rpx;
  margin-bottom: 15rpx;
}

.plan-stat {
  flex: 1;
  text-align: center;
}

.plan-stat-label {
  font-size: 24rpx;
  color: #388e3c;
  margin-bottom: 8rpx;
}

.plan-stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #2e7d32;
}

.today-plan {
  padding-top: 15rpx;
  border-top: 1rpx solid rgba(46, 125, 50, 0.2);
}

.today-plan-label {
  font-size: 24rpx;
  color: #388e3c;
  margin-bottom: 8rpx;
}

.today-plan-content {
  font-size: 26rpx;
  color: #2e7d32;
  font-weight: 500;
}

.plan-empty {
  padding: 30rpx 20rpx;
  text-align: center;
}

.plan-empty-text {
  font-size: 26rpx;
  color: #388e3c;
  line-height: 1.6;
}
