/* pages/health-coin/health-coin.wxss */
.container {
  padding: 20rpx;
  background: linear-gradient(180deg, #fff8e1 0%, #f0f7e8 100%);
  min-height: 100vh;
}

/* 签到动画 */
.check-in-animation {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  pointer-events: none;
}

.coin-rain {
  width: 100%;
  height: 100%;
  position: relative;
}

.coin {
  position: absolute;
  font-size: 60rpx;
  animation: fall 2s ease-in;
}

.coin:nth-child(1) { left: 10%; animation-delay: 0s; }
.coin:nth-child(2) { left: 30%; animation-delay: 0.2s; }
.coin:nth-child(3) { left: 50%; animation-delay: 0.4s; }
.coin:nth-child(4) { left: 70%; animation-delay: 0.6s; }
.coin:nth-child(5) { left: 90%; animation-delay: 0.8s; }

@keyframes fall {
  0% {
    top: -100rpx;
    opacity: 1;
    transform: rotate(0deg);
  }
  100% {
    top: 100vh;
    opacity: 0;
    transform: rotate(720deg);
  }
}

/* 余额卡片 */
.balance-card {
  background: linear-gradient(135deg, #ffd54f 0%, #ffb300 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 179, 0, 0.3);
}

.balance-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.balance-title {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.6);
  font-weight: 500;
}

.rule-btn {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.5);
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
}

.balance-amount {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.coin-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.amount {
  font-size: 72rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.balance-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 30rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.3);
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.5);
}

/* 区块 */
.section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.view-all {
  font-size: 24rpx;
  color: #ffb300;
}

/* 任务列表 */
.task-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.task-item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  background: linear-gradient(135deg, #f0f7e8 0%, #e8f5e0 100%);
  border-radius: 12rpx;
  border: 2rpx solid #a8d08d;
  transition: all 0.3s;
}

.task-item.completed {
  background: #f5f5f5;
  border-color: #e0e0e0;
  opacity: 0.6;
}

.task-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.task-info {
  flex: 1;
}

.task-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.task-reward {
  font-size: 24rpx;
  color: #ffb300;
  font-weight: 600;
}

.task-status {
  font-size: 32rpx;
}

.status-done {
  color: #4caf50;
  font-weight: bold;
}

.status-todo {
  color: #ffb300;
}

/* 历史记录 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-left {
  flex: 1;
}

.history-reason {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.history-time {
  font-size: 22rpx;
  color: #999;
}

.history-right {
  margin-left: 20rpx;
}

.history-amount {
  font-size: 32rpx;
  font-weight: bold;
}

.history-amount.earn {
  color: #4caf50;
}

.history-amount.spend {
  color: #f44336;
}

.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 商城按钮 */
.mall-button {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #a8d08d 0%, #8bc34a 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(168, 208, 141, 0.4);
}

.mall-icon {
  font-size: 56rpx;
  margin-right: 20rpx;
}

.mall-text {
  flex: 1;
}

.mall-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.mall-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.mall-arrow {
  font-size: 40rpx;
  color: white;
  font-weight: bold;
}
