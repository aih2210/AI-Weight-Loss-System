/* pages/ai-assistant/ai-assistant.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f7e8 0%, #ffffff 100%);
  padding-top: 100rpx;
  padding-bottom: 200rpx;
}

/* 状态栏 */
.status-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 101;
}

.status-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.status-icon {
  font-size: 32rpx;
}

.status-text {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.status-actions {
  display: flex;
  gap: 15rpx;
}

.status-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f0f7e8;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.messages-container {
  padding: 20rpx;
}

.message-item {
  display: flex;
  margin-bottom: 30rpx;
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.ai-message {
  flex-direction: row;
}

.user-message {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #a8d08d, #8bc34a);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  flex-shrink: 0;
}

.user-message .message-avatar {
  background: linear-gradient(135deg, #64b5f6, #42a5f5);
}

.message-content {
  max-width: 500rpx;
  margin: 0 20rpx;
}

.message-text {
  background: white;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  white-space: pre-wrap;
}

.user-message .message-text {
  background: linear-gradient(135deg, #a8d08d, #8bc34a);
  color: white;
}

.message-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
  text-align: right;
}

.user-message .message-time {
  text-align: left;
}

/* 正在输入动画 */
.typing-indicator {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  animation: fadeIn 0.3s;
}

.typing-dots {
  display: flex;
  gap: 8rpx;
  padding: 20rpx 24rpx;
  background: white;
  border-radius: 16rpx;
  margin-left: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #a8d08d;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.quick-questions {
  padding: 20rpx;
  margin: 20rpx 0;
}

.quick-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.quick-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
}

.quick-item {
  background: white;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(168, 208, 141, 0.2);
  border: 2rpx solid #a8d08d;
}

.input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.input-box {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.message-input {
  flex: 1;
  background: #f5f5f5;
  padding: 20rpx 24rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.send-button {
  background: linear-gradient(135deg, #a8d08d, #8bc34a);
  color: white;
  border: none;
  border-radius: 30rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.send-button[disabled] {
  opacity: 0.5;
}

.action-bar {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin-top: 15rpx;
}

.action-item {
  font-size: 24rpx;
  color: #999;
  padding: 10rpx 20rpx;
}

